<!-- Validation failure messages -->
<% if @decision.errors.any? %>
  <% @decision.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit decision #<%= @decision.id %>
</h1>

<hr>

<form action="/update_decision/<%= @decision.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @decision.user_id %>">
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @decision.title %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update decision
  </button>
</form>

<hr>

<a href="/decisions">
  Go back
</a>
